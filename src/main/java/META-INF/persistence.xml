<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="NewPersistenceUnit">
        <class>hello.TesttableEntity</class>
        <properties>
            <property name="toplink.jdbc.url" value="jdbc:h2:mem:default"/>
            <property name="toplink.jdbc.driver" value="org.h2.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:h2:mem:default"/>
            <property name="hibernate.connection.driver_class" value="org.h2.Driver"/>
            <property name="openjpa.ConnectionURL" value="jdbc:h2:mem:default"/>
            <property name="openjpa.ConnectionDriverName" value="org.h2.Driver"/>
            <property name="eclipselink.jdbc.url" value="jdbc:h2:mem:default"/>
            <property name="eclipselink.jdbc.driver" value="org.h2.Driver"/>
        </properties>
    </persistence-unit>
</persistence>
